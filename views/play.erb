<div>
<p><%= $game.player_one.name %> vs. <%= $game.player_two.name %></p>
<p><%= $game.player_one.name %> HP: <%= $game.player_one.hitpoints %></p>
<p><%= $game.player_two.name %> HP: <%= $game.player_two.hitpoints %></p>

<% if $game.turn == $game.player_one  %>
<form action="/attack" method="post">
  <input type="submit" name="attack" value="Attack Player 2!">
</form>
<% elsif $game.turn == $game.player_two %>
<form action="/attack_p1" method="post">
  <input type="submit" name="attack" value="Attack Player 1!">
</form>
<% end %>
</div>
